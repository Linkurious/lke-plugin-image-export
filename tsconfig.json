{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "types": ["node", "jest"]
  },
  "typeRoots": ["./src/types"],
  "globals": {
    "IS_DEV": "boolean"
  },
  "include": ["./src/**/*", "./lib/**/*"],
  "exclude": ["node_modules"]
}
