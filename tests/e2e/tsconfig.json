{
  "ts-node": {
    "files": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "noImplicitAny": false
  },
  "include": ["../../../src/**/*.ts", "steps", "steps/*.ts", "helpers"]
}
