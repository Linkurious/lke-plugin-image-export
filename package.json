{
  "name": "ogma-linkurious-parser-template",
  "version": "0.0.1",
  "engines": {
    "node": "16.15.0",
    "npm": "8.5.5"
  },
  "files": [
    "backend/**/**.js",
    "public/**.js",
    "public/**.html",
    "public/assets/**",
    "manifest.json"
  ],
  "description": "A plugin to demo the Ogma Linkurious Parser",
  "main": "public/index.js",
  "author": "Andrea Fantaccione",
  "scripts": {
    "tsc": "tsc -b",
    "clean": "rm -rf dist *.tgz *.lke",
    "copy-assets": "mkdir -p dist/public && cp -R src/public/assets dist/public && cp src/public/index.html dist/public",
    "build:project": "npm-run-all build:manifest build:public build:backend",
    "build:manifest": "mkdir -p dist && cat src/manifest-template.json | envsubst > dist/manifest.json",
    "build:public": "tsc -b src/public && cd dist/public_tmp && browserify *.js --debug -o ../public/index.js",
    "postbuild:public": "npm run copy-assets",
    "build:backend": "tsc -b src/backend",
    "build:dependencies": "cp package.json dist && cd dist && npm install --only=prod --no-optional",
    ":build": "npm run build:project && npm run build:dependencies && npm pack ./dist && npm run gunzip",
    "gunzip": "gunzip -qf -c $npm_package_name-$npm_package_version.tgz > $npm_package_name-$npm_package_version.lke",
    "deploy:login": "curl -X POST $npm_config_DEPLOY_URL/api/auth/login --cookie-jar 'lke.cookie' -H 'Content-type: application/json' -d '{ \"usernameOrEmail\": \"'$npm_config_DEPLOY_USER'\", \"password\": \"'$npm_config_DEPLOY_PASS'\" }'",
    "deploy:logout": "curl -X GET $npm_config_DEPLOY_URL/api/auth/logout --cookie 'lke.cookie'  -H 'Content-type: application/json' && rm lke.cookie",
    "predeploy:restart-plugins": "npm run deploy:login",
    "deploy:restart-plugins": "curl -X POST $npm_config_DEPLOY_URL/api/admin/plugins/restart-all --cookie 'lke.cookie'",
    "postdeploy:restart-plugins": "npm run deploy:logout",
    "prebuild-deploy": "npm run build",
    "build-deploy": "npm run deploy",
    "deploy": "cp $npm_package_name-$npm_package_version.lke $npm_config_DEPLOY_PLUGIN_FOLDER",
    "postdeploy": "npm run deploy:restart-plugins",
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "build": "typehead build && npm run types",
    "serve": "typehead serve",
    "types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "test": "jest",
    "test:unit": "jest --ci --testResultsProcessor='jest-junit'",
    "lint": "eslint --ext .js,.ts --fix"
  },
  "devDependencies": {
    "@linkurious/code-tools": "0.0.8",
    "@mapbox/typehead": "^1.2.1",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "axios": "^0.27.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^28.1.0",
    "canvas": "^2.9.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "jest-junit": "^13.2.0",
    "json-server": "^0.17.0",
    "prettier": "^2.5.1",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "xmldom": "^0.6.0"
  },
  "dependencies": {
    "@linkurious/ogma-linkurious-parser": "3.0.12",
    "@linkurious/rest-client": "3.0.12",
    "canvas": "^2.9.0",
    "express-async-handler": "^1.2.0",
    "ogma": "3.3.19",
    "xmldom": "^0.6.0"
  },
  "bundledDependencies": [
    "ogma",
    "canvas",
    "xmldom",
    "@linkurious/rest-client",
    "@linkurious/ogma-linkurious-parser",
    "express-async-handler"
  ],
  "bundleDependencies": [
    "ogma",
    "canvas",
    "xmldom",
    "@linkurious/rest-client",
    "@linkurious/ogma-linkurious-parser",
    "express-async-handler"
  ]
}
